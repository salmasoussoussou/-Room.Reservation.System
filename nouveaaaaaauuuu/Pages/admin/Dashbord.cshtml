@page
@model nouveaaaaaauuuu.Pages.admin.AdminLoginModel
@{
    ViewData["Title"] = "Connexion Admin - Système de Réservation";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Connexion Administrateur</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="Username">Nom d'utilisateur</label>
            <input type="text" asp-for="Input.Username" class="form-control" id="Username" placeholder="Entrez le nom d'utilisateur" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Mot de passe</label>
            <input type="password" asp-for="Input.Password" class="form-control" id="Password" placeholder="Entrez le mot de passe" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
    </form>
</div>
