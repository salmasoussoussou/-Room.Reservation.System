@page
@model IndexModel
@{
    ViewData["Title"] = "Page d'accueil";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Système de Réservation</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        .hero-section {
            background: linear-gradient(135deg, #007bff, #00d2ff);
            color: #ffffff;
            padding: 6rem 0;
            text-align: center;
            border-bottom: 2px solid #0056b3;
        }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .hero-section p {
                font-size: 1.25rem;
            }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            flex-wrap: wrap;
            margin: 3rem 0;
        }

        .card {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            max-width: 400px;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

            .card img {
                width: 100%;
                height: auto;
                object-fit: cover;
            }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .card-text {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            color: #ffffff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .footer {
            background-color: #007bff;
            color: #ffffff;
            padding: 1rem 0;
            text-align: center;
            margin-top: 3rem;
        }

            .footer p {
                margin: 0;
                font-size: 1rem;
            }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1>Bienvenue dans le Système de Réservation de Salles</h1>
            <p>Gérez vos réservations de salles facilement et efficacement avec notre plateforme intuitive.</p>
        </div>
    </div>

    <div class="container">
        <div class="card-container">
            <div class="card">
                <img src="~/Image/11870_1463119287_theroom2.jpg" alt="Salle" />
                <div class="card-body">
                    <h5 class="card-title">Voir les Salles</h5>
                    <p class="card-text">Consultez les salles disponibles et obtenez des détails sur chacune d'elles.</p>
                    <a asp-page="/Room/Index" class="btn btn-primary">Voir les Salles</a>
                </div>
            </div>
            <div class="card">
                <img src="~/Image/res.jpeg" alt="Réservation" />
                <div class="card-body">
                    <h5 class="card-title">Gérer les Réservations</h5>
                    <p class="card-text">Visualisez et gérez vos réservations facilement à partir de cette section.</p>
                    <a asp-page="/Reservation/Index" class="btn btn-primary">Gérer les Réservations</a>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="container">
            <p>&copy; 2024 Système de Réservation de Salles. Tous droits réservés.</p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
